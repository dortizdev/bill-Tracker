<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bill Tracker</title>
  <!-- <link rel="shortcut icon" href="favicon.ico"> -->
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Bill Tracker</h1>

  <h2>Enter your Company, Dollar Amount, and Due Date</h2>

  <form action="/bills" method="POST">
    <input type="text" placeholder="Company" name="company">
    <input type="text" value="$" placeholder="Amount" name="amount">
    <input type="text" placeholder="Due Date" name="due">
    <button type="submit">Submit</button>
  </form>

  <!-- <h3>Enter your Company, Dollar Amount, and Due Date</h3> -->
  <ul class="messages">
  <% for(var i=0; i<choice.length; i++) {%>
    <li class="message">
      <span><%= choice[i].company %></span>
      <span><%= choice[i].amount %></span>
      <span><%= choice[i].due %></span>
      <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
      <span><i class="fa fa-minus-circle" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <script src="main.js"></script>

</body>
</html>
